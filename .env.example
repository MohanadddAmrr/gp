# TactiVision Pro - Environment Variables
# =========================================
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS
# =============================================================================

# Football-data.org API (optional)
# Get your API key from: https://www.football-data.org/
FOOTBALL_DATA_API_KEY=your_api_key_here

# StatsBomb API (optional - open data available without key)
STATSBOMB_API_KEY=

# Opta API (optional)
OPTA_API_KEY=your_api_key_here

# Twitter API (for social media export)
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_SECRET=your_access_secret_here

# =============================================================================
# DATABASE
# =============================================================================

# Database URL (default: SQLite)
DATABASE_URL=sqlite:///matches.db

# For PostgreSQL (optional):
# DATABASE_URL=postgresql://user:password@localhost:5432/tactivision

# =============================================================================
# PATHS
# =============================================================================

# Input videos directory
INPUT_VIDEOS_PATH=./input_videos

# Output directory
OUTPUT_PATH=./outputs

# Models directory
MODELS_PATH=./models

# Logs directory
LOGS_PATH=./logs

# =============================================================================
# PROCESSING
# =============================================================================

# CUDA device selection (empty = CPU only)
CUDA_VISIBLE_DEVICES=0

# Number of processing threads
OMP_NUM_THREADS=4

# OpenCV optimization
OPENCV_OPENCL_RUNTIME=disabled

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret for authentication (generate a strong random string)
JWT_SECRET=your_jwt_secret_here_change_in_production

# API Key for external access
API_KEY=your_api_key_here

# =============================================================================
# STREAMING
# =============================================================================

# RTMP streaming URL (optional)
RTMP_URL=rtmp://localhost/live/stream

# WebRTC signaling server (optional)
WEBRTC_SIGNALING_SERVER=ws://localhost:8080

# =============================================================================
# CLOUD STORAGE (Optional)
# =============================================================================

# AWS S3
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_BUCKET_NAME=tactivision-storage
AWS_REGION=us-east-1

# Google Cloud Storage
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GOOGLE_CLOUD_BUCKET=tactivision-storage

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your_connection_string
AZURE_CONTAINER_NAME=tactivision

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Hot reload for development
HOT_RELOAD=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_WEARABLE_INTEGRATION=false
ENABLE_SOCIAL_EXPORT=true
ENABLE_STREAMING=false
ENABLE_BROADCAST_GRAPHICS=true

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================

# Add your custom environment variables below
# CUSTOM_VAR=value
